<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="{{ identity.description }}">
<meta name="author" content="{{ identity.name }}">

<meta property="og:type" content="website">
<meta property="og:url" content="{{ identity.url }}">
<meta property="og:title" content="{{ identity.name }}">
<meta property="og:image"
      content="{{ url_for('static',
                          filename='images/' + identity.imagepath) }}">
<meta property="og:description" content="{{ identity.description }}">
<meta property="og:site_name" content="{{ identity.url }}">
<meta property="og:locale" content="{{ identity.locale }}">
<meta property="article:author" content="{{ identity.name }}">

<meta name="twitter:url" content="{{ identity.url }}">
<meta name="twitter:title" content="{{ identity.name }}">
<meta name="twitter:description" content="{{ identity.description }}">
<meta property="twitter:image"
      content="{{ url_for('static',
                          filename='images/' + identity.imagepath) }}">

