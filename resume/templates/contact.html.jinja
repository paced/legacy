{% extends 'base.html.jinja' %}
{% block content %}

<div class="container">
    <h2 class="lead text-center">Contact Me</h2>
    <div class="row" style="padding: 1.5em; padding-bottom: 0.5em">
      <div class="col col-3"></div>
      <div class="col col-6">
        <p class="subtitle text-center">
          <div class="row">
            <p>
              Shoot me an email if you like. We can talk about my projects, talk shop, discuss over a drink, or just catch up to say 'hello.'
            </p>
          </div>
        </p>
      </div>
    </div>
    <div class="row align-center">
      <form action="https://enformed.io/zs009i6t" method="POST">
        <input name="*honeypot" type="hidden" />
        <input name="*redirect" type="hidden"
               value="http://paced.me/thanks" />
        <input name="Purpose" type="hidden"
               value="paced.me contact page" />
        <div class="row gutters">
          <div class="col col-6">
            <div class="form-item">
              <label>Your Name <span class="req">*</span></label>
              <input id="name" name="name" placeholder="Somebody Else"
                     required="true" type="text" style="float: left; text-align: left" />
            </div>
          </div>
          <div class="col col-6">
            <div class="form-item mobpad">
              <label>Email <span class="req">*</span></label>
              <input class="form-control" id="email" name="email"
                     placeholder="hello@there.me" type="text"
                     requred="true"/>
            </div>
          </div>
        </div>
        <div class="col col-12">
            <div class="form-item mobpad2">
                <label>Subject <span class="req">*</span></label>
                <input id="subject" name="subject" placeholder="Meet for coffee?" required="true" type="text" />
            </div>
        </div>
        <div class="row">
          <div class="col col-12" style="padding-top: 0.5em">
            <div class="form-item mobpad2">
                  <label>Message <span class="req">*</span></label>
                  <textarea cols="42" name="message"
                            placeholder="I can't seem to find you on Facebook."
                            required="true" rows="8"></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="row align-center">
        <div class="form-item">
          <button class="button round outline big"
                  type="submit">
            Send Message
          </button>
        </div>
      </form>
    </div>
</div>

{% endblock %}
