<h3 class="text-center">Writing</h3>
  {% for i in p.writing %}
    <p class="text-center" style="margin: 5px"><b>{{ i.name }}</b></p>
    <p class="small text-center">{{ i.authors }}</p>
    <p class="text-center">

      {% set writingURL = url_for('static', filename=i.full.rstrip()) %}

    <button class="button round outline"
            onclick="window.open('{{ writingURL }}')">Full piece (PDF)</button>
    </p>
    <hr style="margin-bottom: 3.5vh"/>
