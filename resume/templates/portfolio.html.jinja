{% extends 'base.html.jinja' %}
{% block content %}

<!-- I agonised for literally weeks on this design. In the end: usability before flashiness! -->
<div class="text-center" style="padding-top: 1.5em">
  <h2>Portfolio</h2>
</div>
<div class="container row">
  <div class="col col-2"></div>
  <div class="col col-8">

<!-- -->
<h3 class="text-center">Completed Software</h3>
  <table class="striped" style="padding-bottom: 2vh">
    <tr>
      <td><b>Name</b></td>
      <td><b>Stack</b></td>
      <td><b>Blurb</b></td>
      <td><b>Source</b></td>
      <td><b>Link</b></td>
      <td><b>Docs</b></td>
    </tr>

    {% for i in p.completed %}
      <tr>
        <td>
          <b>{{ i.name }}</b>
        </td>
        <td >
          {{ i.stack }}
        </td>
        <td>
          {{ i.blurb }}
        </td>
        <td>
          <a href="{{ i.source }}" target="_blank">Source</a>
        </td>
        <td>
          {% if i.link %}
            <a href="{{ i.link }}" target="_blank">Link</a>
          {% else %}
            N/A
          {% endif %}
        </td>
        <td>
          {% if i.docs %}
            <a href="{{ i.docs }}" target="_blank">Docs</a>
          {% else %}
            N/A
          {% endif %}
        </td>
      </tr>
    {% endfor %}
  </table>

